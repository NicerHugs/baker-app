  <form class="new">
    <section class="basic">
      <h2>Basic Info</h2>
      <div class="line"></div>
      <button><i class="fa fa-plus"></i>Add Photo</button>

      <div class="basic-qs">
        {{input type="text" placeholder="Recipe Name" value=name}}
        {{input type="text" placeholder="By" value=author.username disabled="true"}}
        {{input type="checkbox" checked=isPublic name="is-public"}}
          <label name="is-public">Make it public</label>
      </div><!--basic-qs-->

      <div class="cooking-qs">
        {{view Ember.Select
            content=recipeType
            value=selectedRecipeType
            prompt="Recipe Type"}}
        {{input type="text" placeholder="Prep Time" value=prepTime}}
        {{view Ember.Select
            content=timeUnit
            value=selectedPrepTimeUnit}}
        {{input type="text" placeholder="Cook Time" value=cookTime}}
        {{view Ember.Select
            content=timeUnit
            value=selectedCookTimeUnit}}
        {{input type="text" placeholder="Cook Temp" value=cookTemp}}
        {{view Ember.Select
            content=tempUnit
            value=selectedTempUnit}}
      </div><!--cooking-qs-->

      <div class="yield-qs">
        {{input type="text" value=yield placeholder="yield count"}}
        {{input type="text" value=yieldUnit placeholder="cookies, loaves, etc"}}
      </div><!--yield-qs-->

    </section><!--basic info-->

    <section class="steps">
      <h2>Steps</h2>
      <div class="line"></div>

        {{#each steps itemController="step"}}
          {{#each ingredients itemController="ingredient"}}
              <div class="step-qs">
                {{#if isAdded}}
                  {{#if isEditing}}
                    {{input type="text" placeholder="Amount" value=amount}}
                    {{view Ember.Select
                      content=foodUnits
                      optionValuePath="content.id"
                      optionLabelPath="content.name"
                      prompt="Unit"
                      value=foodUnit}}
                    {{view Ember.Select
                      content=foods
                      optionValuePath="content.id"
                      optionLabelPath="content.name"
                      prompt="Ingredient"
                      value=food}}
                    {{input type="text" placeholder="Ingredient" value=ingredient}}
                    <button {{action "saveIngredient"}}>done</button>
                  {{else}}
                    <span>{{amount}}</span>
                    <span>{{foodUnitName}}</span>
                    <span>{{ingredient}}</span>
                    <button {{action "editIngredient"}}>edit</button>
                  {{/if}}
                  <button {{action "deleteIngredient"}}>delete</button>
                {{else}}
                  {{input type="text" placeholder="Amount" value=amount}}
                  {{view Ember.Select
                    content=foodUnits
                    optionValuePath="content.id"
                    optionLabelPath="content.name"
                    prompt="unit"
                    action=populateIngredients
                    value=foodUnit}}
                  {{view Ember.Select
                    content=foods
                    optionValuePath="content.id"
                    optionLabelPath="content.name"
                    prompt="Ingredient"
                    value=food}}
                  {{input type="text" placeholder="Ingredient" value=ingredient}}
                  <button {{action "addIngredient"}}>add</button>
                {{/if}}
              </div><!--step-qs-->
          {{/each}}
          {{textarea
            placeholder="What directions go with this step?"
            value=description}}
        {{/each}}

      <input type="submit" value="Add another step" {{action "addStep"}}>
    </section><!-- steps-->

    <section class="notes">
      <h2>Personal Notes</h2>
      <div class="line"></div>
      {{textarea
        value=notes}}
    </section><!-- notes-->

    <input type="submit" value="Save this Recipe!" {{action "saveRecipe"}}>
  </form>

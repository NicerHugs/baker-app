<main class="login">
  <h2>Welcome to Batch Maker!</h2>
  <form>
    <h3>Please log in</h3>
    <label name="email">Email:</label>
      {{input
        type="email"
        placeholder="email"
        name="email"
        value=email}}
    <label name="password">Password:</label>
      {{input
        type="password"
        placeholder="password"
        name="password"
        value=password}}
    <input type="submit" value="log in" {{action "logIn"}}>

    <p>New here?</p>
    {{#link-to 'createAccount'}}Create an account{{/link-to}}
  </form>


</main>
